<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"            宽度匹配父宽度
    android:layout_height="match_parent"
    android:orientation="vertical"                  默认排列方式
    tools:context=".MainActivity">

    <LinearLayout
        android:id = "@+id/ll_1"                名称
        android:layout_width="200dp"            宽度
        android:layout_height="200dp"
        android:orientation="vertical"           排列方式
        android:background="#000000"           背景颜色
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:padding="50dp"                距离默认长宽
        android:paddingBottom="10dp"
        android:layout_marginBottom="20dp">

        <view                                    创建新视图
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF0033"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="#0066FF"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"                   居中方式
        >
        <view
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_weight="1"/>             分配比例权重（-去width之后的）
        <view
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#ff0030"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
